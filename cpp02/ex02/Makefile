NAME		= fixed

CC			= c++
CFLAGS		= -Wall -Wextra -Werror -std=c++98

SRC			= main.cpp Fixed.cpp

OBJ			= $(SRC:.cpp=.o)


all: $(NAME)

$(NAME): $(OBJ)
	@echo "Linking $(NAME)..."
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

%.o: %.cpp
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	@echo "ðŸ§¹ Cleaning object files..."
	rm -f $(OBJ)

fclean: clean
	@echo "ðŸ—‘ï¸ Removing executable..."
	rm -f $(NAME)

re: fclean all

.PHONY: all clean fclean re